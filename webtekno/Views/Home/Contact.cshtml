@{
    ViewBag.Title = "Contact";
}
@using webtekno.Models.Entity
@model List<hastabilgi1>


<!DOCTYPE html>
<html>
<head>
    <title>Hasta Bilgi Otomasyonu</title>
    <link href="~/Content/style.css" rel="stylesheet">
</head>
<body>
    <h1>Hasta Bilgi Sorgulama</h1>
    @using (Html.BeginForm("Contact", "Home", FormMethod.Get))
            {
                <p>
                    Aranacak Hasta Adı: @Html.TextBox("p")
                    <input type="submit" value="ara" />
                </p>
            }
    <h2>Hasta Bilgileri</h2>
    <table id="patientTable">
        <tr>
            <th>ıd</th>
            <th>İsim</th>
            <th>Yaş</th>
            <th>Cinsiyet</th>
            <th>Hastalık</th>
            <th>İlaç</th>
        </tr>
        <tbody>
            @foreach (var ktgr in Model)
            {
                <tr>
                    <td>@ktgr.hastano</td>
                    <td>@ktgr.hastaad</td>
                    <td>@ktgr.yas </td>
                    <td>@ktgr.cinsiyet</td>
                    <td>@ktgr.hastalik</td>
                    <td>@ktgr.ilac</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>